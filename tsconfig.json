{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "outDir": "./titan-core",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "paths": {
    "*": ["node_modules/*", "src/types/*"]
  }
}